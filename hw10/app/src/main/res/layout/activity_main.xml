<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter number for tripling"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/tripleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Triple"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/inputNumber"
        app:layout_constraintStart_toStartOf="@id/inputNumber"
        app:layout_constraintEnd_toEndOf="@id/inputNumber" />

    <EditText
        android:id="@+id/inputX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Enter X"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@id/tripleButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/inputY"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <EditText
        android:id="@+id/inputY"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:hint="Enter Y"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="@id/inputX"
        app:layout_constraintStart_toEndOf="@id/inputX"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/operationSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputX" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/operationSpinner"
        app:layout_constraintStart_toStartOf="@id/operationSpinner"
        app:layout_constraintEnd_toEndOf="@id/operationSpinner" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Result will appear here"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/calculateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
